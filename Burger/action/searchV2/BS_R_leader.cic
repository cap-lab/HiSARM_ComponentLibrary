/////////////////////////////////////

// ##DEFINE_SECTION::START
// ##DEFINE_SECTION::END

TASK_CODE_BEGIN

/////////////////////////////////////
// global definition
/////////////////////////////////////

// ##DEFINE_PORT_SECTION::START
STATIC int port_leader;
STATIC int group_led;
STATIC int port_led;
// ##DEFINE_PORT_SECTION::END

// ##DEFINE_MULTICAST_PORT_SECTION::START
// ##DEFINE_MULTICAST_PORT_SECTION::END

/////////////////////////////////////
// init code
/////////////////////////////////////

TASK_INIT
{
// ##INIT_PORT_SECTION::START
    port_leader = PORT_INITIALIZE(TASK_ID, "isLeader");
    UFMulticastPort_Initialize(TASK_ID, "led", &group_led, &port_led);
// ##INIT_PORT_SECTION::END

// ##INIT_MULTICAST_PORT_SECTION::START
// ##INIT_MULTICAST_PORT_SECTION::END

    // TODO: task initialize code        #ListenAlarmFrom("Guard")
}
static int count = 0;

/////////////////////////////////////
// go code
/////////////////////////////////////

TASK_GO
{
    // TODO: task main code
    int dataLength;
    int leader = 0;
	uem_result result;
    TURTLEBOT_LED led = {FALSE, FALSE};
    UFPort_ReadFromQueue(port_leader, (unsigned char *)&leader, sizeof(int), 0, &dataLength);
    if (leader == 1) {
        if (count <= 0) {
            led.left = TRUE;
            led.right = TRUE;
            count += 1;
        } else if (count > 50) {
            count -= 1;
        }
    } else {
        count = 0;
    } 
    result = UFMulticastPort_WriteToBuffer(group_led, port_led, (unsigned char *)&led, sizeof(TURTLEBOT_LED), &dataLength);
    if (result != ERR_UEM_NOERROR) {
        SEMO_LOG_ERROR("Communication error(%X)", result);
    }
}



/////////////////////////////////////
// wrapup code
/////////////////////////////////////

TASK_WRAPUP
{
    // TODO: task wrapup code
    int dataLength;
    TURTLEBOT_LED led = {FALSE, FALSE};
    UFMulticastPort_WriteToBuffer(group_led, port_led, (unsigned char *)&led, sizeof(TURTLEBOT_LED), &dataLength);
}

TASK_CODE_END


