// ##DEFINE_PORT_SECTION::START
#define LEDPortNumber 3

#define PIN_BUZZER 31
#define MELODY1 262 //NOTE_C4(pitch.h)
#define MELODY2 1047 //NOTE_C6(pitch.h)
// ##DEFINE_PORT_SECTION::END

//OLLO LEDSensor;          // OLLO.cpp (.arduino15/packages/OpenCR/hardware/OpenCR/1.4.19/libraries/OLLO)

