// init code
/////////////////////////////////////

TASK_INIT
{
// ##INIT_PORT_SECTION::START
// ##INIT_PORT_SECTION::END

// ##INIT_MULTICAST_PORT_SECTION::START
// ##INIT_MULTICAST_PORT_SECTION::END

    // TODO: task initialize code
    LEDbegin(LEDPortNumber);
    pinMode(PIN_BUZZER, OUTPUT);
}


/////////////////////////////////////
// go code
/////////////////////////////////////

TASK_GO
{
    // TODO: task main code
    turnOnRightLED(LEDPortNumber);
    turnOffLeftLED(LEDPortNumber);
    tone(PIN_BUZZER, MELODY1);
    delay(50);

    turnOnLeftLED(LEDPortNumber);
    turnOffRightLED(LEDPortNumber);
    tone(PIN_BUZZER, MELODY1);
    delay(50);
}



/////////////////////////////////////
// wrapup code
/////////////////////////////////////

TASK_WRAPUP
{
    // TODO: task wrapup code
    turnOffLeftLED(LEDPortNumber);
    turnOffRightLED(LEDPortNumber);
    noTone(PIN_BUZZER);
}

